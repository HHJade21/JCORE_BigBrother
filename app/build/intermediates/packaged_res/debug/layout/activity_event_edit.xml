<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:text="Categories"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="140dp"
            android:background="@drawable/bt_rect_save"
            android:onClick="saveEventAction"
            android:text="Save"
            android:textColor="@color/black"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/WorkOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:text="work out"
            android:textColor="@color/lightGray"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:text="social"
            android:textColor="@color/lightGray"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/HangOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:text="HANG OUT"
            android:textColor="@color/lightGray"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Anniversary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:text="Anniversary"
            android:textColor="@color/lightGray"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Assignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:text="Assignment"
            android:textColor="@color/lightGray"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:text="DATE"
            android:textColor="@color/lightGray"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:text="STUDY"
            android:textColor="@color/lightGray"
            android:textSize="10sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Growth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:text="GROWTH"
            android:textColor="@color/lightGray"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="27dp"
        android:background="@null"
        android:text="Details"
        android:textColor="@color/black"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/eventNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Write the details."
        android:inputType="text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/eventDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/datePickerButton_pre"
            style="?android:spinnerStyle"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:onClick="onClick_predate"
            android:text="JAN 01 2022"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <Button
            android:id="@+id/datePickerButton_next"
            style="?android:spinnerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:onClick="onClick_nextdate"
            android:text="JAN 01 2022"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/timePickerButton_pre"
            style="?android:spinnerStyle"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:onClick="onClick_pretime"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <Button
            android:id="@+id/timePickerButton_next"
            style="?android:spinnerStyle"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:onClick="onClick_nexttime"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/eventLocationET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Location"
        android:inputType="text"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/eventNoteET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Note"
        android:inputType="text"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/eventTogetherET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Together with"
        android:inputType="text"
        android:textSize="20sp" />

    </LinearLayout>